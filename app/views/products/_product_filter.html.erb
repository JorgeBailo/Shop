<div class="row">
   <div class="col-md-12 well">
      <form action="<%= products_path %>" method="get" >
        <fieldset>
          <div class="form-group">
            <%= label_tag(:category) %>
            <input type="text" name="category_is" value="<%= params[:category_is] %>"> 
          </div>
          <div class="form-group">
            <%= label_tag(:units) %>
            <input type="number" name="units_up" value="<%= params[:units_up] %>">
          </div>
          <div class="form-group">
            <%= label_tag(:registered_at) %>
            <input type="date" name="registered_at_after" value="<%= params[:registered_at_after] %>">
          </div>
          <div class="form-group">
            <%= label_tag(:manufacturer) %>
            <input type="text" name="manufacturer_like" value="<%= params[:manufacturer_like] %>">
          </div>
          <div class="form-group">
            Price
            <%= label_tag(:price_up, "between") %>
            <input type="number" name="price_up" value="<%= params[:price_up] %>">
            <%= label_tag(:price_down, "and") %>
            <input type="number" name="price_down" value="<%= params[:price_down] %>">
          </div>
          <button type="submit" class="btn btn-primary"><%= t("Filter") %></button>
      </form>
  </div>
</div>
