<p class="fields">
<%= f.label :product_id %> : <%= f.collection_select :product_id, Product.all, :id, :name, {} %>
<%= f.label :quantity %> : <%= f.text_field :quantity, placeholder: "Quantity", :class=>"input-mini" %>
<%= f.hidden_field :id %>
<%= f.hidden_field :_destroy %>
<%= link_to_function t("remove"), "remove_fields(this)", class: "btn btn-small btn-danger" %>
</p>

