<!DOCTYPE html>
<html>
  <body>
    <div>
      <h1>Order Detail #<%= @order.id %></h1>
    </div>
    <div>
      <div>
        <h4>Status:</h4>
        <p><%= @order.order_status %></p>
      </div>
      <div>
        <h4>Payment method:</h4>
        <p><%= @order.payment %></p>
      </div>
      <div>
        <h4 >Address:</h4>
        <p><%= @order.address %></p>
      </div>
      <div>
        <h4>City:</h4>
        <p><%= @order.city %></p>
      </div>
      <div>
        <h4>Your name:</h4>
        <p><%= @order.buyer_name + " " + @order.buyer_lastname  %></p>
      </div>
      <div>
        <h4>Products:</h4>
        <table>
          <thead>
            <tr>
              <th>Product</th>
              <th>Unit price</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% @order.item_lines.each do |item_line| %>
              <tr>
                <td><%= item_line.product.name %></td>
                <td><%= item_line.price %></td>
                <td><%= item_line.quantity %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
